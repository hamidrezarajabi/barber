@page
@model cafefinder.Pages.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Place</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Place.Name" class="control-label"></label>
                <input asp-for="Place.Name" class="form-control" />
                <span asp-validation-for="Place.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Place.Neighborhood" class="control-label"></label>
                <input asp-for="Place.Neighborhood" class="form-control" />
                <span asp-validation-for="Place.Neighborhood" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Place.City" class="control-label"></label>
                <input asp-for="Place.City" class="form-control" />
                <span asp-validation-for="Place.City" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Place.CafeShop" /> @Html.DisplayNameFor(model => model.Place.CafeShop)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Place.Restaurant" /> @Html.DisplayNameFor(model => model.Place.Restaurant)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Place.FreeSmoke" /> @Html.DisplayNameFor(model => model.Place.FreeSmoke)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Place.FoodAndDrink" /> @Html.DisplayNameFor(model => model.Place.FoodAndDrink)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Place.OpenSpace" /> @Html.DisplayNameFor(model => model.Place.OpenSpace)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Place.FreeSittingTime" class="control-label"></label>
                <input asp-for="Place.FreeSittingTime" class="form-control" />
                <span asp-validation-for="Place.FreeSittingTime" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Place.RoofGarden" /> @Html.DisplayNameFor(model => model.Place.RoofGarden)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Place.BookCafe" /> @Html.DisplayNameFor(model => model.Place.BookCafe)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Place.BirthdayTheme" /> @Html.DisplayNameFor(model => model.Place.BirthdayTheme)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Place.Link" class="control-label"></label>
                <input asp-for="Place.Link" class="form-control" />
                <span asp-validation-for="Place.Link" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Place.LocationLink" class="control-label"></label>
                <input asp-for="Place.LocationLink" class="form-control" />
                <span asp-validation-for="Place.LocationLink" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Place.StarRating" class="control-label"></label>
                <input asp-for="Place.StarRating" class="form-control" />
                <span asp-validation-for="Place.StarRating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Place.Address" class="control-label"></label>
                <input asp-for="Place.Address" class="form-control" />
                <span asp-validation-for="Place.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="file" name="files" multiple />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
